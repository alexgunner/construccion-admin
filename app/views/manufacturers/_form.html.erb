<%= form_with(model: manufacturer, local: true) do |form| %>
  <% if manufacturer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(manufacturer.errors.count, "error") %> prohibited this manufacturer from being saved:</h2>

      <ul>
      <% manufacturer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :name, id: :manufacturer_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Descripción" %>
    <%= form.text_field :description, id: :manufacturer_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "País" %>
    <%= form.text_field :country, id: :manufacturer_country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Ciudad" %>
    <%= form.text_field :city, id: :manufacturer_city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Correo electrónico" %>
    <%= form.text_field :email, id: :manufacturer_email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Teléfono" %>
    <%= form.text_field :phone, id: :manufacturer_phone, class: "form-control" %>
  </div>

  <div class="actions">
   <center>
      <%= form.submit "Aceptar", class: "btn btn-success" %>
      <%= link_to "Cancelar", manufacturers_url, class: "btn btn-danger" %>
    </center>
  </div>
<% end %>
