<%= form_with(model: product_variant, local: true) do |form| %>
  <%= form.hidden_field :product_id, :value => @product.id %>

  <div class="form-group">
    <%= form.label "Precio" %>
    <%= form.text_field :price, id: :product_variant_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Descripción" %>
    <%= form.text_field :description, id: :product_variant_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Codigo" %>
    <%= form.text_field :reference_code, id: :product_variant_reference_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Reposición" %>
    <%= form.check_box :reposition, id: :product_variant_reposition %>
  </div>

  <div class="form-group">
    <%= form.label "Día de Reposición" %>
    <%= form.date_field :reposition_date, id: :product_variant_date_reposition %>
  </div>

  <div class="form-group">
    <%= form.label  "En Oferta?" %>
    <%= form.check_box :offer, id: :product_variant_offer %>
  </div>

  <div class="form-group">
    <%= label_tag(:offer_price, "Precio de oferta") %>
    <%= form.number_field :offer_price, id: :product_variant_offer_price, class: "form-control" %>
  </div>

  <div class="actions">
   <center>
      <%= form.submit "Aceptar", class: "btn btn-success" %>
      <%= link_to "Cancelar", '/productos/' + @product.id.to_s + '/variantes', class: "btn btn-danger" %>
    </center>
  </div>
<% end %>
