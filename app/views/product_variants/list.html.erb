<h1>Variantes del producto <%= @product.name %></h1>
<%= link_to 'Nueva variante', '/productos/' + @product.id.to_s + '/product_variants/new', class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-hover table-stripped">
    <thead>
      <tr>
        <th>Precio</th>
        <th>Descripción</th>
        <th>Código de referencia</th>
        <th>En oferta?</th>
        <th>Precion oferta</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_variants.each do |variant| %>
        <tr>
          <td>Bs. <%= variant.price %></td>
          <td><%= variant.description %></td>
          <td><%= variant.reference_code %></td>
          <td>
            <% if variant.offer_price.nil? %>
              No
            <% else %>
              Sí
            <% end %>
          </td>
          <td>
            <% if variant.offer_price.nil? %>
              No hay oferta
            <% else %>
              <%= variant.offer_price %>
            <% end %>
          </td>
           <td><%= link_to 'Editar', '/productos/' + @product.id.to_s + '/product_variants/' + variant.id.to_s + '/edit' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
