<h1>Almacenes</h1>
<%= link_to 'Crear almacen', new_store_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-stripped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Tipo</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= store.name %></td>
          <td><%= store.description %></td>
          <td><%= store.role %></td>
          <td><%= link_to 'Abastecer', '/almacenes/' + store.id.to_s + '/stock' %></td>
          <td><%= link_to 'Editar', edit_store_path(store) %></td>
          <td><%= link_to 'Eliminar', store, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
