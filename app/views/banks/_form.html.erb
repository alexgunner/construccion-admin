<%= form_with(model: bank, local: true) do |form| %>
  <div class="form-group">
    <%= form.label "Nombre de entidad bancaria" %>
    <%= form.text_field :name, id: :bank_name, class: "form-control", :required => true, :maxlength => 100 %>
  </div>

  <div class="form-group">
    <%= form.label "NÃºmero de cuenta" %>
    <%= form.number_field :acount, id: :bank_acount, class: "form-control", :required => true, :maxlength => 100 %>
  </div>

  <div class="form-group">
    <%= form.label "Nombre titual de la cuenta" %>
    <%= form.text_field :nameaccount, id: :bank_nameaccount, class: "form-control", :required => true, :maxlength => 100 %>
  </div>

  <div class="form-group">
    <%= form.label "Tipo de moneda de la cuenta" %>
    <%= form.text_field :typemoney, id: :bank_typemoney, class: "form-control", :required => true, :maxlength => 100 %>
  </div>

  <div class="actions">
    <center>
      <%= form.submit "Aceptar", class: "btn btn-success" %>
