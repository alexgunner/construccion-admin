<p id="notice"><%= notice %></p>

<h1>Carrusel</h1>
<%= link_to 'Agregar imagen', new_carousel_path, class: "btn btn-primary" %>


<table class="table table-stripped">
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carousels.each do |carousel| %>
      <tr>
        <td><img src="<%= carousel.pic.url %>"></td>
        <td>
          <% if carousel.pic_type == true %>
            Carrusel principal
          <% else %>
            Carrusel publicidad
          <% end %>
        </td>
        <td><%= link_to 'Editar', edit_carousel_path(carousel) %></td>
        <td><%= link_to 'Eliminar', carousel, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

