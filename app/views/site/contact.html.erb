
<div class="row">
    <div class="col-lg-12 padding-right"> 
        <div class="features_items">
        <div class="row">
        
            
        <div class="col-lg-8">
            <div id="map" style="width: 550px; height: 400px;" data-lat="<%= @contact_information.lat %>" data-lng="<%= @contact_information.long %>"></div>
        </div>
        <div class="col-lg-4">
            <h4>Dirección</h4>
            <p>
            <%= @contact_information.address %>
            </p>

            <h4>Teléfonos</h4>
            <p>
            <%= @contact_information.phone %>
            </p>
            <h4>Correo electrónico</h4>
            <p>
            <%= @contact_information.email %>
            </p>
        </div>
    </div>
    <div class="row">
        
        <div class="col-lg-12">    
            <h3>Formulario de contacto</h3>
            <%= form_tag("/post_message", method: "post") do %>
                <div class="row">
                    <div class="col-lg-6">    
                        <div class="form-group">
                            <%= label_tag("Nombre") %>
                            <%= text_field_tag(:name, nil, class: "form-control") %>
                        </div>
                        <div class="form-group">
                            <%= label_tag("Telefono") %>
                            <%= text_field_tag(:phone, nil, class: "form-control") %>
                        </div>
                        <div class="form-group">
                            <%= label_tag("País") %>
                            <%= text_field_tag(:country, nil, class: "form-control") %>
                        </div>
                        <div class="form-group">
                            <%= label_tag("Ciudad") %>
                            <%= text_field_tag(:city, nil, class: "form-control") %>
                        </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <%= label_tag("Correo electrónico") %>
                                <%= text_field_tag(:email, nil, class: "form-control") %>
                            </div>
                            <div class="form-group">
                                <%= label_tag("Mensaje") %>
                                <%= text_area(:message, nil, class: "form-control", size: "10x8") %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <center>
                        <%= submit_tag("Enviar", class: "btn btn-success") %>
                    </center>
                </div>
            <% end %>
        </div>
    </div>
       
    </div>
</div>

<script>
    function initMap() {
        var latitud = parseFloat(document.getElementById('map').getAttribute("data-lat"));
        var longitud = parseFloat(document.getElementById('map').getAttribute("data-lng"));
        console.log(latitud);
        var uluru = {lat: latitud, lng: longitud};
        var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 17,
        center: uluru
        });
        var marker = new google.maps.Marker({
        position: uluru,
        map: map
        });
    }
</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAy4PzSIG77OtqMciXyhMuTD9tQSICh0LM&callback=initMap">
</script>
