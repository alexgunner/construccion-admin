<script>
    function initMap() {
        var latitud = parseFloat(document.getElementById('map').getAttribute("data-lat"));
        var longitud = parseFloat(document.getElementById('map').getAttribute("data-lng"));
        console.log(latitud);
        var uluru = {lat: latitud, lng: longitud};
        var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 17,
        center: uluru
        });
        var marker = new google.maps.Marker({
        position: uluru,
        map: map
        });
    }
</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAy4PzSIG77OtqMciXyhMuTD9tQSICh0LM&callback=initMap">
</script>
