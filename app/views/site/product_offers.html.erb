
<div class="row">
    <div class="col-sm-9 padding-right"> 
        <div class="features_items">
            <h2 class="title text-center">Productos en Oferta</h2>
            <% @products_in_offer.each do |product| %>
                <div class="col-sm-3">
                    <a class="product-image-wrapper" href="/product_details/<%= product.id %>" >
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="<%= product.picture %>" alt="" />
                                <h2><%= product.name.truncate(20) %></h2>
                                <p><%= product.description.truncate(20) %></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% end %>
        </div>
    </div>
</div>