<div class="row">
    <div class="col-lg-12 padding-right"> 
        <div class="features_items">
            <h2 class="title text-center">Proveedores</h2>
            <% @providers.each do |p| %>
                <div class="row">
                    <div class="col-lg-6">
                        <h4><%= p.name %></h4>
                        <img src="<%= p.cover.url %>" class="img-responsive">
                    </div>
                    <div class="col-lg-6">
                        <br><br>
                        <strong>País:</strong> <%= p.country %><br>
                        <strong>Ciudad:</strong> <%= p.city %><br>
                        <strong>Descripción:</strong> <%= p.description %><br>
                        <strong>Enlace:</strong> <a href="<%= p.website_link %>" target="_blank">Página web</a><br>
                    </div>
                </div>
                <hr class="divider">
            <% end %>
        </div>
    </div>
</div>
