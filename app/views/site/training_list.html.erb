<% @training_categories.each do |training_category| %>
    <div class="row">
        <div class="col-lg-12">
            <h4><%= training_category.name %></h4>
            <div class="row">
                <% training_category.trainings.each do |document| %>
                    <div class="col-lg-6">
                        <h3><%= document.name %></h3>
                        <p><%= document.description %></p>
                        <iframe width="420" height="315" src="<%= document.videolink %>"></iframe><br>
                        <a href="<%= document.docu %>" target="_blank">Descargar</a>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>