<%= form_with(model: transport, local: true) do |form| %>
  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :name, id: :transport_name, class: "form-control", :required => true, :maxlength => 100 %>
  </div>
  <div class="actions">
    <center>
       <%= form.submit "Aceptar", class: "btn btn-success" %>
       <%= link_to "Cancelar", '/transportes', class: "btn btn-danger" %>
     </center>
  </div>
<% end %>
