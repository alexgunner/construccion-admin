<div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h1>Productos vendidos</h1>
      <div class="table-responsive">
        <table class="table table-stripped table-hover">
          <thead>
            <tr>
              <th>Código de Variante</th>
              <th>Descripción</th>
              <th>Categoría</th>
              <th>Cantidad</th>
              <th>Precio Promedio</th>
              <th>Total en Bs.</th>
              <th>En oferta</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @solds.each do |sold| %>
              <tr>
                <td><%= sold.product_variant.code %></td>
                <td><%= sold.product_variant.description.truncate(100) %></td>
                <td><%= sold.product_variant.product.category.name %></td>
                <td><%= sold.quantity %></td>
                <td><%= (sold.product_variant.price + sold.product_variant.wholesaleprice + sold.product_variant.specialistprice + sold.product_variant.importerprice)/4 %></td>
                <td>Bs. <%= sold.total %></td>
                <td><%= sold.product_variant.product.in_offer%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
