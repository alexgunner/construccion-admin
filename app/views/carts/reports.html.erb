<div class="row">
    <div class="col-lg-10 offset-lg-1">
      <h1>Productos vendidos</h1>
      <div class="table-responsive">
        <table class="table table-stripped table-hover">
          <thead>
            <tr>
              <th>Código de Variante</th>
              <th>Descripción</th>
              <th>Categoría</th>
              <th>Cantidad</th>
              <th>Precio Promedio</th>
              <th>Total</th>
              <th>En oferta</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @solds.each do |cart| %>
              <tr>
                <td><%= cart.product_variant.code %></td>
                <td><%= cart.product_variant.description.truncate(100) %></td>
                <td><%= cart.product_variant.product.category.name %></td>
                <td><%= cart.quantity %></td>
                <td><%= cart.product_variant.price %></td>
                <td>total</td>

                <td><%= cart.product_variant.product.in_offer%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
