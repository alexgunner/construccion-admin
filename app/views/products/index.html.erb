<div class="row">
  <div class="col-lg-10 offset-lg-1">    
    <p id="notice"><%= notice %></p>

    <h1>Productos</h1>
    <br>
    <%= link_to 'Crear producto', new_product_path %>
    <br>
    <div class="table-responsive">
      <table class="table table-hover table-stripped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Color</th>
            <th>Código</th>
            <th>Unidad de medida</th>
            <th>Provedor</th>
            <th>Fabricante</th>
            <th>Categoría</th>
            <th>Subcategoría</th>
            <th>Imagen</th>
            <th colspan="2">Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
              <td><%= product.color %></td>
              <td><%= product.code %></td>
              <td><%= product.measure.name %></td>
              <td><%= product.provider.name %></td>
              <td><%= product.manufacturer.name %></td>
              <td><%= product.category.name %></td>
              <td><%= product.subcategory.name %></td>
              <td><%= image_tag(product.picture.url(:thumb)) %></td>
              <td><%= link_to 'Editar', edit_product_path(product) %></td>
              <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Confirma que deseas eliminar este producto.' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>