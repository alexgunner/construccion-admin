<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Descripción" %>
    <%= form.text_field :description, id: :product_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Precio" %>
    <%= form.text_field :price, id: :product_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Color" %>
    <%= form.text_field :color, id: :product_color, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Código" %>
    <%= form.text_field :code, id: :product_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Unidad de medida" %>:
    <%= form.collection_select :measure_id, Measure.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Provedor" %>:
    <%= form.collection_select :provider_id, Provider.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Fabricante" %>:
    <%= form.collection_select :manufacturer_id, Manufacturer.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Categoría" %>:
    <%= form.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Subcategoría" %>:
    <%= form.collection_select :subcategory_id, Subcategory.all, :id, :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label "Imagen" %>:
    <%= form.file_field :picture, class: "form-control" %>
  </div>

  <div class="actions">
    <center>
      <%= form.submit "Aceptar", class: "btn btn-success" %>
      <%= link_to "Cancelar", products_url, class: "btn btn-danger" %>
    </center>
  </div>
<% end %>
