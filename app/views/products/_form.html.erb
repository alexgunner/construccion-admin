<%= form_with(model: product, local: true, html: { multipart: true }) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label "Código" %>
    <%= form.text_field :reference_code, id: :product_reference_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Descripción" %>
    <%= form.text_field :description, id: :product_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Unidad de medida" %>
    <%= form.collection_select :measure_id, Measure.all, :id, :name, id: :product_meausure_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Categoría" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, id: :product_category_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Subcategoría" %>
    <%= form.collection_select :subcategory_id, Subcategory.all, :id, :name, id: :product_subcategory_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Proveedor" %>
    <%= form.collection_select :provider_id, Provider.all, :id, :name, id: :product_provider_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Fabricante" %>
    <%= form.collection_select :manufacturer_id, Manufacturer.all, :id, :name, id: :product_manufacturer_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Imagen" %>
    <%= form.file_field :picture, id: :product_picture_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Ficha técnica" %>
    <%= form.file_field :details, id: :product_details_id, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Aceptar", class: "btn btn-success" %>
    <%= link_to "Cancelar", "/productos", class: "btn btn-danger" %>
  </div>
<% end %>
