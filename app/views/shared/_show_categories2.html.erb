<div class="features_items"><!--features_items-->
	<h2 class="title text-center"><%= title %></h2>
	<div class="row">
		<div class="col-lg-1"></div>
	<% categories.each_with_index do |category, index| %>

		<% if (index + 1) % 5 ==0 %>
			<div class="row">
		<% end %>

		<div class="col-lg-2 item-pad category">
			<a class="category-image-wrapper" href="/category_products/<%= category.id %>">
				<div class="single-products">
					<div class="productinfo text-center">
						<% if category.picture.url(:original) != "/images/original/missing.png" %>
							<%= image_tag category.picture.url(:original), class: "img-responsive", style: "border-radius: 2%;" %>
						<% else %>
							<img src="/assets/domusnoimage.png" class="img-responsive">
						<% end %>
						<button class="btn btn-domus btn-block"><%= category.name %></button>
					</div>
				</div>
			</a>
		</div>

		<% if (index + 1) % 5 == 0 %>
			</div>
			<div class="col-lg-1"></div>
		<% end %>

	<% end %>
</div><!--features_items-->
