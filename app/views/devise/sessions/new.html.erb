<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-5">
      <center><h2>Iniciar sesión</h2></center>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label "Correo electrónico" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "Contraseña" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <div class="row">
          <div class="col-lg-5" style="padding: 10px;">
            <%= f.submit "Iniciar sesión", class: "btn btn-success btn-block" %>
          </div>
          <div class="col-lg-7" style="padding: 10px;">
            <a href="/password_resets/new" class="btn btn-success btn-block">¿Olvidaste tu contraseña?</a>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-12" style="padding: 10px;">
            <a href="/users/sign_up" class="btn btn-success btn-block">REGISTRATE</a>
          </div>
        </div>
          
          
      </div>
    <% end %>

    </div>
  
</div>


  