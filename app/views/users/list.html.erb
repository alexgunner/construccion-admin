<h1>Usuarios</h1>

<form method="get" action="">
  <div class="row">
      <div class="col-lg-5 offset-lg-7">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Buscar por nombre o apellido" name="search">
          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
        </div>
      </div>
  </div>
</form>
<br/>
<br/>
<div class="table-responsive">
  <table class="table table-stripped table-hover">
    <thead>
      <tr>
        <th>Nombres Completo</th>
        <th>CI</th>
        <th>NIT</th>
        <th>Rol</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <%if user.role == "Bloqueado"%>
        <tr bgcolor="#FFD587">
          <td><%= user.name %></td>
          <td><%= user.ci %></td>
          <td>
            <% if user.nit.nil? || user.nit.blank? %>
              <%= "No registrado" %>
            <%else%>
              <%= user.nit %>
            <%end%>
          </td>
          <td><%= user.role %></td>
          <td>
            <% if user.state.nil? %>
              <%= link_to 'Habilitar', '/usuarios/' + user.id.to_s + '/habilitar' %>
            <%else%>
              <%if user.role == "Bloqueado" %>
               <%= link_to 'Desbloquear', '/usuarios/' + user.id.to_s + '/desbloquear' %>
              <%else%>
                <%= link_to 'Bloquear', '/usuarios/' + user.id.to_s + '/bloquear' %>
              <%end%>
            <%end%>
          </td>
          <td><%= link_to 'Ver', '/usuario/' + user.id.to_s %></td>
          <td><%= link_to 'Eliminar', '/usuarios/' + user.id.to_s, method: :delete%></td>
        </tr>
        <%else%>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.ci %></td>
          <td>
            <% if user.nit.nil? || user.nit.blank? %>
              <%= "No registrado" %>
            <%else%>
              <%= user.nit %>
            <%end%>
          </td>
          <td><%= user.role %></td>
          <td>
            <% if user.state.nil? %>
              <%= link_to 'Habilitar', '/usuarios/' + user.id.to_s + '/habilitar' %>
            <%else%>
              <%if user.role == "Bloqueado" %>
               <%= link_to 'Desbloquear', '/usuarios/' + user.id.to_s + '/desbloquear' %>
              <%else%>
                <%= link_to 'Bloquear', '/usuarios/' + user.id.to_s + '/bloquear' %>
              <%end%>
            <%end%>
          </td>
          <td><%= link_to 'Ver', '/usuario/' + user.id.to_s %></td>
          <td><%= link_to 'Eliminar', '/usuarios/' + user.id.to_s, method: :delete%></td>
        </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>
</div>
