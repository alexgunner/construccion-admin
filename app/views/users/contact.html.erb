<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h1>Contactar usuario</h1>
    <br/>
    <br/>
    <br/>
    <%= form_for :do_contact, url: "/users/do_contact" do |form| %>
    <%= form.hidden_field :id, :value => @user.id %>
      <div class="form-group">
        <h5><strong>Correo electr√≥nico:</strong> <%= @user.email%></h5>
      </div>
      <div class="form-group">
        <h5><strong>Mensaje:</strong></h5>
        <%= form.text_area :comment, :rows => 12, :cols => 50, class: "form-control", :maxlength => 500 %>
      </div>
      <div class="actions">
        <center>
           <%= form.submit "Enviar", class: "btn btn-success" %>
        </center>
      </div>
    <%end%>
  </div>
</div>
