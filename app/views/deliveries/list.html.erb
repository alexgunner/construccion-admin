<h1>Envíos</h1>
<%= link_to 'Crear envío', new_delivery_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-stripped table-hover">
    <thead>
      <tr>
        <th>Nombre de transporte</th>
        <th>Dirección</th>
        <th>Teléfono</th>
        <th>Destino</th>
        <th>Costo</th>
        <th>Costo mínimo</th>
        <th>Tipo de envío</th>
        <th>Tipo de entrega</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.name %></td>
          <td><%= delivery.address %></td>
          <td><%= delivery.phone %></td>
          <td><%= delivery.destination.name %> - <%=delivery.destination.city %></td>
          <td><%= delivery.cost %></td>
          <td><%= delivery.costmin %></td>
          <td><%= delivery.typedelivery %></td>
          <td><%= delivery.shipping %></td>
          <td><%= link_to 'Editar', edit_delivery_path(delivery) %></td>
          <td><%= link_to 'Eliminar', delivery, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
