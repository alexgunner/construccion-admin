<h1>Envíos</h1>
<%= link_to 'Crear envío', new_delivery_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-stripped table-hover">
    <thead>
      <tr>
        <th>Nombre (Lugar - Tipo de transporte)</th>
        <th>Destino</th>
        <th>Medio de envío</th>
        <th>Costo</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.name %></td>
          <td><%= delivery.destination.name %></td>
          <td><%= delivery.transport.name %></td>
          <td><%= delivery.cost %></td>
          <td><%= link_to 'Editar', edit_delivery_path(delivery) %></td>
          <td><%= link_to 'Eliminar', delivery, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
