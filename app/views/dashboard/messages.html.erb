<h1>Mensajes</h1>

<div class="table-responsive">
  <table class="table table-stripped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo electrónico</th>
        <th>País</th>
        <th>Ciudad</th>
        <th>Mensaje</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.name %></td>          
          <td><%= message.phone %></td>
          <td><%= message.email %></td>
          <td><%= message.country %></td>
          <td><%= message.city %></td>
          <td><%= message.message %></td>
        
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
