<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <p id="notice"><%= notice %></p>
    
    <h1>Subcategorías</h1>
    <br>
    <%= link_to 'Crear subcategoría', new_subcategory_path %>
    <br>
    <div class="table-responsive">
      <table class="table table-hover table-stripped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Categoría</th>
            <th colspan="2">Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @subcategories.each do |subcategory| %>
            <tr>
              <td><%= subcategory.name %></td>
              <td><%= subcategory.description %></td>
              <td><%= subcategory.category.name %></td>
              <td><%= link_to 'Editar', edit_subcategory_path(subcategory) %></td>
              <td><%= link_to 'Eliminar', subcategory, method: :delete, data: { confirm: 'Confirma que deseas eliminar esta subcategoría.' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>