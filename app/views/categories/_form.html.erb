<%= form_with(model: category, local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :name, id: :category_name, class: "form-control", :required => true %>
  </div>

  <div class="form-group">
    <%= form.label "Descripción" %>
    <%= form.text_field :description, id: :category_description, class: "form-control", :required => true %>
  </div>

  <div class="form-group">
    <%= form.label "Número de prioridad" %>
    <%= form.number_field :number, id: :category_number, class: "form-control", :required => true %>
  </div>

  <div class="form-group">
    <%= form.label "Imagen" %>
    <%= form.file_field :picture, id: :category_picture, class: "form-control"%>
  </div>
  <%if category.picture.url  != "/images/original/missing.png" %>
    <div class="form-group">
      <center><%= image_tag category.picture, class: "img-thumbnail" %></center>
    </div>
  <%end%>

  <div class="actions">
    <center>
      <%= form.submit "Aceptar", class: "btn btn-success" %>
      <%= link_to "Cancelar", "/categorias", class: "btn btn-danger" %>
    </center>
  </div>
<% end %>
