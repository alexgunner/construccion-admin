<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <p id="notice"><%= notice %></p>
    <h1>Categorías</h1>
    <br>
    <%= link_to 'Crear categoría', new_category_path %>
    <br>
    <div class="table-responsive">
      <table class="table table-stripped table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th colspan="2">Opciones</th>
          </tr>
        </thead>
      
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td><%= link_to 'Editar', edit_category_path(category) %></td>
              <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Confirma que deseas eliminar esta categoría.' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
  </div>
</div>