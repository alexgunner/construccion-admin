<h1>Categorías</h1>

<form method="get" action="">
  <div class="row">
      <div class="col-lg-5 offset-lg-7">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Buscar por nombre de categoría" name="search">
          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
        </div>
      </div>
  </div>
</form>

<%= link_to 'Crear categoría', new_category_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-hover table-stripped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
