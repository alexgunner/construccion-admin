<h1>Categorías</h1>
<%= link_to 'Crear categoría', new_category_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-hover table-stripped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
