<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <h1>Transferencia desde <%= @store.name %></h1>

    <%= form_for :new_transfer, url: "/stock/do_transfer" do |form| %>
    <%= form.hidden_field :store_id, :value => @store.id %>
    <%= form.hidden_field :id, :value => @stock.id %>
      <div class="form-group">
        <label>Almacen</label>
        <%= form.collection_select(:store_transfer, Store.all, :id, :name, { :prompt => "Selecciona un almacen"}, {class: "form-control", required: true}) %>
      </div>
      <div class="form-group">
        <label>Cantidad</label>
        <%= form.number_field :quantity_transfer, class: "form-control", :required => true, :maxlength => 100  %>
      </div>
      <div class="actions">
        <center>
          <%= form.submit "Aceptar", class: "btn btn-success" %>
          <%= link_to "Cancelar", '/almacenes/' + @store.id.to_s + '/stock', class: "btn btn-danger" %>
        </center>
      </div>
    <% end  %>
  </div>
</div>
