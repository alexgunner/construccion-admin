<%= form_with(model: destination, local: true) do |form| %>
  <div class="form-group">
    <%= form.label "Departamento o Ciudad" %>
    <%= form.text_field :name, id: :destination_name, class: "form-control", :required => true, :maxlength => 100  %>
  </div>

  <div class="form-group">
    <%= form.label "Provincia" %>
    <%= form.text_field :city, id: :destination_city, class: "form-control", :required => true, :maxlength => 100 %>
  </div>

  <div class="form-group">
    <%= form.label "PaÃ­s" %>
